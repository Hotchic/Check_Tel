<!-- 리스트 목록 -->
	<select id="getBlogL" resultMap="mainResult">
		
		SELECT * FROM (
		SELECT A.*, ROWNUM RNUM FROM (
		
		SELECT P.PLAN_NO
		, P.BLOG_TITLE
		, p.MEMBER_NICK
		, D.SPOT_FURL
		, D.CITY_NAME
		, PLAN_START
		, TO_CHAR(PLAN_START,'YYYY"년"MM"월"DD"일"') AS PLAN_STARTS

		FROM PLAN P, MEMBER M, DETAIL D
		WHERE
		M.MEMBER_NO = P.MEMBER_NO
		AND D.PLAN_NO
		= P.PLAN_NO
		AND D.DAY_NO=1
		AND D.DAY_VISIT=1
		ORDER BY PLAN_NO DESC 
		
		<![CDATA[					
	) A WHERE ROWNUM <= #{lastIndex}
)WHERE RNUM > #{firstIndex}
]]>
	
	</select>
<!-- MY리스트 목록 -->
	<select id="getmyBlogL" resultMap="mainResult">
		
		SELECT * FROM (
		SELECT A.*, ROWNUM RNUM FROM (
		
		SELECT P.PLAN_NO
		, P.BLOG_TITLE
		, p.MEMBER_NICK
		, D.SPOT_FURL
		, D.CITY_NAME
		, PLAN_START
		, TO_CHAR(PLAN_START,'YYYY"년"MM"월"DD"일"') AS PLAN_STARTS

		FROM PLAN P, MEMBER M, DETAIL D
		WHERE
		M.MEMBER_NO = P.MEMBER_NO
		AND D.PLAN_NO = P.PLAN_NO
		AND P.MEMBER_NO= #{memberNo}
		AND D.DAY_NO=1
		AND D.DAY_VISIT=1
		
		ORDER BY PLAN_NO DESC 
		
		<![CDATA[					
	) A WHERE ROWNUM <= #{lastIndex}
)WHERE RNUM > #{firstIndex}
]]>
	
	</select>
	
	<!-- 프로필 사진 추가 및 변경 -->
	<update id="profileUpdate" parameterType="member">

		UPDATE MEMBER SET
		<if test="member_img1 != null and member_img1 !='' ">
			MEMBER_IMG= #{memberImg}
		</if>
		
		WHERE MEMBER_NO = #{memberNo}

	</update>
	
	
