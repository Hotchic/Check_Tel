<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PlanDAO"> <!--namespace로 구분  -->

	<resultMap id="planResult" type="plan"> <!--type에는 클래스 명  -->
		<id property="spotNo" column="SPOT_NO" /> <!--필드명(BoardVO 필드), 컬럼명  -->
		<id property="cityNo" column="CITY_NO" />
		<id property="dayVisit" column="DAY_VISIT" />
		<id property="planNo" column="PLAN_NO" />
		<id property="dayNo" column="DAY_NO" />
	</resultMap>
   
   <insert id="insertPlan" parameterType="plan">
      <selectKey keyProperty="seq" resultType="int" order="BEFORE">
      SELECT NVL(MAX(SEQ), 0) + 1 FROM BOARD
      </selectKey>
      <!-- CDATA 태그인식을 막는 명령어 -->
        INSERT INTO DETAIL(
                      SPOT_NO
                    , CITY_NO
                    , WRITER
                    , CONTENT)
        VALUES(
             #{spotNo}
           , #{cityNo} 
           , #{dayVisit}
           , #{planNo}
           , #{dayNo})
   </insert>

</mapper>
