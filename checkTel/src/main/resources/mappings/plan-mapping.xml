	<update id="hitUpd" parameterType="main">
		UPDATE PLAN SET
		BLOG_HIT = ((SELECT COUNT(HIT_NO) FROM HIT WHERE PLAN_NO = #{planNo}))
		WHERE PLAN_NO = #{planNo}		
	</update>
		
		
