<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"
		aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
	<h4 class="modal-title" id="myModalLabel">회원 가입</h4>
</div>
<div class="modal-body">
	<div class="col-md-6 form-group">
		<label class="sr-only">First Name</label> <input type="text" value=""
			placeholder="First Name" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Last Name</label> <input type="text" value=""
			placeholder="Last Name" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Username</label> <input type="text" value=""
			placeholder="Username" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Password</label> <input type="password"
			value="" placeholder="Password" class="form-control input-lg">

	</div>

	<div class="col-md-12 form-group">
		<label class="sr-only">Address</label> <input type="text" value=""
			placeholder="Address" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Apartment, suite, unit etc.</label> <input
			type="text" value="" placeholder="Apartment, suite, unit etc."
			class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Town / City</label> <input type="text" value=""
			placeholder="Town / City" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">State / County</label> <input type="text"
			value="" placeholder="State / County" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Postcode / Zip</label> <input type="text"
			value="" placeholder="Postcode / Zip" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Email</label> <input type="text" value=""
			placeholder="Email" class="form-control input-lg">
	</div>
	<div class="col-md-6 form-group">
		<label class="sr-only">Phone</label> <input type="text" value=""
			placeholder="Phone" class="form-control input-lg">
	</div>
	<div class="col-md-12 form-group">
		<button class="btn btn-primary" type="button">Register New
			Account</button>
		<button type="button" class="btn btn-danger m-l-10">Cancel</button>

	</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	<button type="button" class="btn btn-primary">회원 가입</button>
</div>